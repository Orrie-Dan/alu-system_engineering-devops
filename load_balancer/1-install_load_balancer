#!/usr/bin/env bash
# Configure HAProxy to load balance between web-01 and web-02 using round robin

# Update package lists
echo -e "Updating system packages...\n"
sudo apt-get update -y

# Install HAProxy
echo -e "Installing HAProxy...\n"
sudo apt-get install -y haproxy

# Enable HAProxy to be started by init script
echo -e "Enabling HAProxy to be managed by init script...\n"
sudo sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Create a backup of the original configuration file
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.backup

# Create new HAProxy configuration
echo -e "Creating HAProxy configuration...\n"
sudo tee /etc/haproxy/haproxy.cfg > /dev/null << EOF
global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

    # Default SSL material locations
    ca-base /etc/ssl/certs
    crt-base /etc/ssl/private

    # Default ciphers to use on SSL-enabled listening sockets
    ssl-default-bind-ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384
    ssl-default-bind-options no-sslv3

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000
    errorfile 400 /etc/haproxy/errors/400.http
    errorfile 403 /etc/haproxy/errors/403.http
    errorfile 408 /etc/haproxy/errors/408.http
    errorfile 500 /etc/haproxy/errors/500.http
    errorfile 502 /etc/haproxy/errors/502.http
    errorfile 503 /etc/haproxy/errors/503.http
    errorfile 504 /etc/haproxy/errors/504.http

# Frontend configuration
frontend http_front
    bind *:80
    default_backend http_back

# Backend configuration with roundrobin algorithm
backend http_back
    balance roundrobin
    server web-01 [STUDENT_ID]-web-01:80 check
    server web-02 [STUDENT_ID]-web-02:80 check
EOF

# Replace [STUDENT_ID] with actual student ID if environment variable exists
if [ -n "$STUDENT_ID" ]; then
    sudo sed -i "s/\[STUDENT_ID\]/$STUDENT_ID/g" /etc/haproxy/haproxy.cfg
    echo -e "Configured with STUDENT_ID: $STUDENT_ID\n"
else
    echo -e "\nWARNING: STUDENT_ID environment variable not set."
    echo -e "Please manually replace [STUDENT_ID] in /etc/haproxy/haproxy.cfg with your actual student ID\n"
fi

# Restart HAProxy to apply changes
echo -e "Restarting HAProxy service...\n"
sudo service haproxy restart

# Verify HAProxy is running
if pgrep -x "haproxy" > /dev/null; then
    echo -e "HAProxy is running successfully!\n"
    echo -e "Load balancer configured to distribute traffic between:"
    echo -e "  - [STUDENT_ID]-web-01"
    echo -e "  - [STUDENT_ID]-web-02"
    echo -e "using roundrobin algorithm.\n"
else
    echo -e "Error: HAProxy failed to start. Please check configuration.\n"
fi
